<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAE6"
    tools:context="com.example.younes.hotornot.ui.activities.ScoreActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/most_voted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/most_voted_first_place"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/picture_view"
            android:background="@color/com_facebook_blue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yn"
                    />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/profile_name"
            android:layout_alignBottom="@+id/picture_view"
            android:layout_margin="3dp"
            app:cardCornerRadius="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="5dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flan Weld Flan" />
                </RelativeLayout>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_alignRight="@id/profile_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="-15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/golden_medal"
            android:elevation="5dp"/>
        </RelativeLayout>
        <!-- Second Place-->
        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/most_voted_second_place"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/second_place_picture_view"
                android:background="@color/com_facebook_blue"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yn"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/second_place_profile_name"
                android:layout_alignBottom="@+id/second_place_picture_view"
                android:layout_margin="3dp"
                app:cardCornerRadius="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="5dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flan Weld Flan" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_alignRight="@id/second_place_profile_name"
                android:layout_centerVertical="true"
                android:layout_marginRight="-15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/silver_medal"
                android:elevation="5dp"/>
        </RelativeLayout>
        <!--Theird Place -->
        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/most_voted_third_place"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/third_place_picture_view"
                android:background="@color/com_facebook_blue"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yn"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/third_place_profile_name"
                android:layout_alignBottom="@+id/third_place_picture_view"
                android:layout_margin="3dp"
                app:cardCornerRadius="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="5dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flan Weld Flan" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_alignRight="@id/third_place_profile_name"
                android:layout_centerVertical="true"
                android:layout_marginRight="-15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bronze_medal"
                android:elevation="5dp"/>
        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
